@model ControleDeUsuarios.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que deseja remover este contato da lista?</h3>
<div>
    <h4>Deletar Contato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tell)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tell)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" asp-all-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger"/>
        <button class="btn btn-secondary">
            <a asp-action="Index" class="text-light text-decoration-none">Voltar</a>
        </button>
    </form>
</div>
