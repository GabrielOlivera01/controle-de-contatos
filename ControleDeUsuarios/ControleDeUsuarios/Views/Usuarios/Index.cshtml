@model IEnumerable<ControleDeUsuarios.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Listagem de Contatos</h1>
<p>
    <button class="btn btn-primary">
        <a class="text-light text-decoration-none" asp-action="Create">Adicionar Novo</a>
    </button>
    <div class="text-end">
        <span class="text-end fw-bold">Contatos cadastrados: @Model.Count()</span>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <button class="btn btn-primary">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-light text-decoration-none">Editar</a>
                </button>
                <button class="btn btn-secondary">
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-light text-decoration-none">Vizualizar</a>
                </button>
                <button class="btn btn-danger">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-light text-decoration-none">Deletar</a>
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>
